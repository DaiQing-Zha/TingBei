<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingBottom="3dip">

    <com.jxnu.zha.tingbei.widgets.CircleImageView android:id="@+id/img_songIcon"
        android:layout_width="45dip" android:layout_height="45dip"
        android:src="@mipmap/ic_default_portrait" android:layout_margin="10dip"/>

    <TextView android:id="@+id/tv_musicName" style="@style/style_wrapContent"
        android:layout_toRightOf="@id/img_songIcon" android:layout_alignTop="@id/img_songIcon"
        android:textSize="@dimen/item_titleSize" android:layout_marginRight="@dimen/item_marginHorizontal"
        android:textColor="@color/color_commBlack33" android:ellipsize="end"
        android:singleLine="true" android:text="GGG"/>

    <TextView android:id="@+id/tv_singerName" style="@style/style_wrapContent"
        android:layout_toRightOf="@id/img_songIcon" android:layout_below="@id/tv_musicName"
        android:singleLine="true" android:textSize="@dimen/item_msgSize"
        android:ellipsize="end" android:layout_marginTop="3dip"
        android:text="BBB"/>
    <ImageView android:id="@+id/ic_moreInfo"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_centerVertical="true" android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/item_marginHorizontal" android:src="@mipmap/ic_comm_more" />

</RelativeLayout>