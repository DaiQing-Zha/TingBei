<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <com.jxnu.zha.tingbei.widgets.PagerSlidingTabStrip
   		android:id="@+id/tabs" android:layout_width="match_parent"
   		android:layout_height="40dip" android:background="@color/color_commWhite"
        android:fillViewport="false" app:pstsUnderlineColor="@android:color/white"
        app:pstsIndicatorColor="@color/color_tabStripUnderLineColor"
        app:pstsTabBackground="@android:color/transparent"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsTabPaddingLeftRight="5dp"
        app:pstsUnderlineHeight="0dp"
        app:pstsIndicatorHeight="2dp"/>
    <include layout="@layout/layout_core_toolbar_shadow"/>
    <android.support.v4.view.ViewPager android:id="@+id/tabsContent"
        android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>